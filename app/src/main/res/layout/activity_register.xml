<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loader_background"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/include9"
        layout="@layout/toolbar_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView3">

        <include layout="@layout/toolbar_shadow" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include9">

        <LinearLayout
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_person_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="@color/colorPlaceholder"
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Pseudonyme"
                android:inputType="textUri" />

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_person_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/colorPlaceholder"
                    android:id="@+id/firstname_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Prénom" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_person_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/colorPlaceholder"
                    android:id="@+id/lastname_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom" />

            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_mail_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="@color/colorPlaceholder"
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Adresse Mail"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_lock_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="@color/colorPlaceholder"
                android:id="@+id/register_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mot de passe"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_lock_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="@color/colorPlaceholder"
                android:id="@+id/conf_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Confirmation"
                android:inputType="textPassword"/>


        </LinearLayout>

         <LinearLayout
             android:onClick="showBirthdatePicker"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:layout_marginBottom="16dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="16dp"
                 android:src="@drawable/ic_event_white_24dp" />

             <TextView
                 android:layout_marginStart="4dp"
                 android:textColorHint="@color/colorPlaceholder"
                 android:hint="Date de naissance"
                 android:id="@+id/birthdate_input"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:textSize="18dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="24dp"
             android:layout_marginTop="16dp"
             android:layout_marginBottom="16dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="16dp"
                 android:src="@drawable/ic_place_white_24dp" />

             <fragment
                 android:id="@+id/place_autocomplete_fragment"
                 android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_wc_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_person_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="@color/colorPlaceholder"
                android:id="@+id/sponsor_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Parrain" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorPlaceholder"
                android:text="Montrer mon nom publiquement"
                android:layout_width="196dp"
                android:layout_height="wrap_content" />
            <Switch
                android:theme="@style/SwitchTheme"
                android:id="@+id/identity_visibility_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorPlaceholder"
                android:text="Permettre à tous de me contacter en message privé"
                android:layout_width="196dp"
                android:layout_height="match_parent" />
            <Switch
                android:theme="@style/SwitchTheme"
                android:id="@+id/chat_visibility_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorPlaceholder"
                android:text="J'accepte de recevoir des e-mails de MateMeUp"
                android:layout_width="196dp"
                android:layout_height="wrap_content" />
            <Switch
                android:theme="@style/SwitchTheme"
                android:id="@+id/accept_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorPlaceholder"
                android:text="J'accepte les CGU"
                android:layout_width="196dp"
                android:layout_height="wrap_content" />
            <Switch
                android:theme="@style/SwitchTheme"
                android:id="@+id/accept_CGU_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


            <Button
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:id="@+id/submit_register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_ripple"
                android:onClick="submitRegister"
                android:text="S'inscrire"
                android:textColor="@color/colorButton" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>